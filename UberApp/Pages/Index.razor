@page "/"
@using UberApp.Server
@using Microsoft.AspNetCore.Components.Web

@code
{
    private async Task TestDB()
    {
        var db = new DatabaseConnection();
        await db.ConnectToDatabase(DatabaseStrings.Users.Id, DatabaseStrings.Users.Container);

        await db.SendInfo();
    }
}
<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?"/>


<form>
    <button type="submit" @onclick="@(async () =>await TestDB())">
        Submit
    </button>
</form>